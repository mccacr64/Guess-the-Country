<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div class="mt-5">
            <p><strong>Email</strong>: <%= user.email %></p>
            <%if(user.id == user.id){ %>
            <h3>Edit</h3>
            <form
            action="/profile/changeInfo/<%= user.id %>?_method=PUT"
            method="POST"
            >
              <div class="mb-3">
                  <label for="userName" class="form-label">Change Username</label>
                  <input type="text" class="form-control" id="userName" name="userName" value="<%= user.userName %>">
              </div>
              <div class="mb-3">
                <label for="motto" class="form-label">Change Motto</label>
                <input class="form-control" id="motto" name="motto" value="<%= user.motto %>">
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Change Profile Picture</label>
                <input type="file" class="form-control" id="imageUpload" name="imgUpload">
                <!-- How to make this mp3 upload -->
              </div>
              <button type="submit" class=" col-3 btn btn-primary link-button logInButtons" value="Upload">Submit</button>
            </form>
            <%}%>
          </div>
      </div>
      <div class="col-6">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= user.profilePicture%>" alt="Profile Picture">
          <div class="card-body">
            <h5 class="card-title"><strong>User Name</strong>: <%= user.userName %></h5>
            <p class="card-text"><strong>Motto</strong>:<%= user.motto %></p>
            <!-- <a href="/logout" class="col-3 btn btn-primary">Logout</a> -->
          </div>
        </div>
